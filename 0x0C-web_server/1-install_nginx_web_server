#!/usr/bin/env bash
# Installs and configures Nginx on web01 server to serve a Hello World! page

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx to listen on port 80
sed -i 's/^listen\s*80;/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx (without using systemctl)
service nginx restart > /dev/null 2>&1 || /etc/init.d/nginx restart > /dev/null 2>&1

# Create index.html with "Hello World!" message
echo "Hello World!" > /var/www/html/index.html

# Check if Nginx is running and returns 200 for /
curl -sI localhost | grep -q "200 OK"
if [ $? -eq 0 ]; then
    echo "Nginx is installed and returning 200 for /"
else
    echo "Nginx is not returning 200 for /"
fi
